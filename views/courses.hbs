<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses</h2>
        <hr />
        <div class="table-responsive">
            <table  class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Course Code</th>
                        <th scope="col">Course Description</th>
                    </tr>
                </thead>
                <tbody>
                {{#if courses}}
                    {{#each courses}}
                        <tr>
                            <td><a href="/course/{{this.courseCode}}">{{this.courseCode}}</a></td>
                            <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                        </tr>
                    {{/each}}
                {{/if}}
                </tbody>
            </table>
        </div>
    </div>
    {{#unless courses}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>