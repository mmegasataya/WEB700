<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Students</h2>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Student Num</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address</th>
                        <th scope="col">Status</th>
                        <th scope="col">Course ID</th>
                    </tr>
                </thead>
                <tbody>
                {{#if students}}
                    {{#each students}}
                    <tr>
                        <td>{{this.studentNum}}</td>
                        <td><a href="/student/{{this.studentNum}}">{{this.firstName}} {{this.lastName}}</a></td>
                        <td><a href="mailto:this.email">{{this.email}}</a></td>
                        <td>{{this.addressStreet}} {{this.addressCity}} {{this.addressProvince}}</td>
                        <td>{{this.status}}</td>
                        <td><a href="/students?course={{this.course}}">{{this.course}}</a></td>
                    </tr>
                    {{/each}}
                {{/if}}
                </tbody>
            </table>
        </div>       
    </div>
    {{#unless students}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>
